<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kargo.Master.MyDetail"
             BackgroundColor="White"
             BackgroundImageSource="detail.png"
            
             >
    <ContentPage.Content>
        <StackLayout Padding="0,100,0,0">
            <Picker
                x:Name="ilpck"
                ItemsSource="{Binding Name}"
                Title="İL SEÇİNİZ"
                VerticalOptions="Center" 
                HorizontalOptions="CenterAndExpand"
                
                />
            <Picker
                x:Name="ilcepck"
                Title="İLÇE SEÇİNİZ"
                VerticalOptions="Center" 
                HorizontalOptions="CenterAndExpand" 
                
                />
            <Button HorizontalOptions="Center" VerticalOptions="Start"
                    Text="ARA"
                    BackgroundColor="#f28909"
                    
                    Clicked="Button_Clicked"
                    CornerRadius="100"
                    ></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
    